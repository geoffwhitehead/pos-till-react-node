{
    "version": "2.0.0",
    "name": "positive-server",
    "description": "POS backend.",
    "main": "index.js",
    "engines": {
        "node": ">=12.0.0",
        "npm": ">=6.0.0"
    },
    "scripts": {
        "test": "jest",
        "dev": "docker-compose up",
        "docker:build": "docker-compose build --build-arg GIT_SSH_KEY=$(cat ~/.ssh/heroku_deploy | base64)",
        "start": "node ./build/index.js",
        "docker:packages": "docker exec -it pos-server_app_1 yarn ",
        "build": "yarn tsc",
        "preinstall": "bash ./scripts/preinstall.sh",
        "postinstall": "bash ./scripts/postinstall.sh",
        "run:prettier": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
        "heroku:logs": "heroku logs -a positive-server --tail",
        "heroku:deploy": "git push -f git@heroku.com:positive-server.git master",
        "heroku:up": "heroku ps:scale web=1 -a postitive-server",
        "heroku:down": "heroku ps:scale web=0 -a positive-server"
    },
    "license": "MIT",
    "dependencies": {
        "@sendgrid/mail": "^7.0.1",
        "agendash": "^1.0.0",
        "argon2": "^0.26.2",
        "bcrypt": "^3.0.8",
        "bcryptjs": "^2.4.3",
        "bluebird": "3.7.2",
        "body-parser": "^1.19.0",
        "celebrate": "^12.1.0",
        "cls-hooked": "^4.2.2",
        "cors": "^2.8.5",
        "date-fns": "^2.16.1",
        "dotenv": "8.2.0",
        "esm": "^3.2.25",
        "express": "^4.17.1",
        "express-basic-auth": "^1.2.0",
        "faker": "^4.1.0",
        "global": "^4.4.0",
        "helmet": "^3.21.2",
        "jsonschema": "1.2.5",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "mongodb": "^3.5.2",
        "mongoose": "^5.9.9",
        "morgan": "^1.9.1",
        "reflect-metadata": "^0.1.13",
        "typedi": "^0.8.0",
        "typescript": "^3.7.5",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.2",
        "@types/mongoose": "^5.7.0",
        "@types/node": "^13.11.1",
        "@types/validator": "^12.0.1",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "jest": "^24.9.0",
        "jest-environment-node": "^24.9.0",
        "mongodb-memory-server": "^6.2.0",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2"
    },
    "jest": {
        "globalSetup": "./config/jest/setup.js",
        "globalTeardown": "./config/jest/teardown.js",
        "testEnvironment": "./config/jest/MongoEnvironment.js"
    }
}
